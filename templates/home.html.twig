{% extends "base.html.twig" %}
{% block title %}
	Acceuil
{% endblock %}
{% block body %}
	<h1 class="mb-4">Nos produits phares</h1>
	<div class="row">
		{% for p in products %}
			<div class="col-md-6 col-lg-4">
				<div class="card">
					<img src="{{ p.mainPicture }}" class="img-fluid" alt="photo du produit">
					<div class="card-body">
						<h4 class="card-title">
							{{ p.name }}
							({{ p.price / 100 }}
							&euro;)
						</h4>
						<span class="badge badge-info">
							{{ p.category.name }}
						</span>
						<p class="card-text">
							{{ p.shortDescription }}
						</p>
						<a href=" {{path('product_show', {
																																																															'category_slug': p.category.slug,
																																																															'slug': p.slug
																																																															})}} " class="btn btn-primary btn-small">Détails</a>
						<a href="#" class="btn btn-success btn-small">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<hr>
	<h2>Un service irréprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum doloremque rem consequuntur excepturi, quaerat ducimus.</p>

	<div class="row">
		{% include "shared/_assurance.html.twig" with {
            'color': 'primary',
            'icone': 'fas fa-truck',
            'text': "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Aliquid sit laudantium et eligendi, animi perferendis."
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color': 'secondary',
            'icone': 'fas fa-check',
            'text': "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Aliquid sit laudantium et eligendi, animi perferendis."
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color': 'warning',
            'icone': 'fas fa-lock',
            'text': "Lorem ipsum dolor sit, amet consectetur adipisicing elit. Aliquid sit laudantium et eligendi, animi perferendis."
        } %}
	</div>
{% endblock %}
